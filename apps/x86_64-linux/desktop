#!/usr/bin/env bash
set -eu

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color



check_installer() {
  if [ -e /etc/NIXOS ]; then
    echo -e "\e[1;32mRunning in the NixOS installer environment.\e[0m"
  else
    echo -e "\e[1;31mNot running in the NixOS installer environment.\e[0m"
    exit 1
  fi
}

cleanup() {
  rm -rf nixos-config-main.zip nixos-config-main nixos-config
}

download_config() {
  # Download the repository from the testing branch
  curl -LJ0 https://github.com/xlrinn/nix/archive/testing.zip -o nixos-config-main.zip
  unzip nixos-config-main.zip
  mv nix-testing nixos-config
  cd nixos-config
  echo -e "${GREEN}‚úì Configuration downloaded and extracted${NC}"
}

run_apply() {
  chmod +x ./apps/x86_64-linux/apply
  ./apps/x86_64-linux/apply
  # Check if username file was created
  if [ ! -f /tmp/username.txt ]; then
    echo -e "\e[1;31mError: /tmp/username.txt does not exist.\e[0m"
    exit 1
  fi
  export USERNAME=$(cat /tmp/username.txt)
  echo -e "${GREEN}‚úì Configuration complete${NC}"
}

run_disko() {
  nix --experimental-features "nix-command flakes" run github:nix-community/disko -- --mode zap_create_mount ./modules/nixos/disk-config.nix
  echo -e "${GREEN}‚úì Disk formatted and mounted${NC}"
}

setup_files() {
  mkdir -p /mnt/etc/nixos
  cp -r * /mnt/etc/nixos
  cd /mnt/etc/nixos
  
  # Clone a fresh copy of the nix repository to the user's home directory
  mkdir -p /mnt/home/david
  cd /mnt/home/david
  git clone https://github.com/xlrinn/nix.git
  chown -R 1000:1000 /mnt/home/david/nix
  echo -e "${GREEN}‚úì Files copied to system${NC}"
}

install_nixos() {
  cd /mnt/etc/nixos  # Ensure we're in the right directory
  
  ARCH=$(uname -m)

  case "$ARCH" in
    x86_64)
      FLAKE_TARGET="x86_64-linux"
      ;;
    aarch64)
      FLAKE_TARGET="aarch64-linux"
      ;;
    *)
      echo -e "${RED}Unsupported architecture: $ARCH${NC}"
      exit 1
      ;;
  esac

  nixos-install --no-root-passwd --flake .#$FLAKE_TARGET --option max-jobs 1
  chmod -R 775 /mnt/etc/nixos
  
  # Set root password to match user password (both set to "6!y2c87T")
  echo -e "${GREEN}üîê Setting root password...${NC}"
  echo "root:6!y2c87T" | chroot /mnt /nix/var/nix/profiles/system/sw/bin/chpasswd
  
  # Set user password
  echo -e "${GREEN}üîê Setting user password...${NC}"
  echo "david:6!y2c87T" | chroot /mnt /nix/var/nix/profiles/system/sw/bin/chpasswd
  
  echo -e "${GREEN}‚úì NixOS installed successfully${NC}"
}

prompt_reboot() {
  echo -e "\e[1;32mRebooting in 5 seconds...\e[0m"
  sleep 5
  reboot
}

cleanup
check_installer
download_config
run_apply
run_disko
setup_files
install_nixos
cleanup
prompt_reboot 